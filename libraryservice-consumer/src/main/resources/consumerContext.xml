<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="
            http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="abstractDao" abstract="true">
        <property name="dataSource" ref="dataSourceLibrary"/>
        <property name="jdbcTemplate" ref="jdbcTemplate"/>
    </bean>

    <bean id="livreDao" class="org.projet.libraryservice.consumer.impl.LivreDAOImpl" parent="abstractDao" />

    <bean id="daoFactory" class="org.projet.libraryservice.consumer.impl.DaoFactoryImpl">
        <property name="livreDao" ref="livreDao"/>
    </bean>
</beans>